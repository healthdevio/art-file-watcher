{
  "name": "art-file-watcher",
  "version": "1.0.2",
  "description": "File Watcher service built with TypeScript and Chokidar.",
  "main": "dist/index.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/healthdevio/art-file-watcher.git"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "bindir": "node scripts/create-bin-dir.js",
    "build": "tsc",
    "pkg:linux": "npm run build && npm run bindir && pkg --targets node18-linux-x64 --output ./bin/art-w dist/index.js",
    "pkg:windows": "npm run build && npm run bindir && pkg --targets node18-win-x64 --output ./bin/art-w.exe dist/index.js",
    "prebuild": "rimraf dist",
    "release": "npx standard-version --no-verify --release-as patch -a"
  },
  "dependencies": {
    "@types/winston": "^2.4.4",
    "chokidar": "^3.6.0",
    "commander": "^14.0.2",
    "dotenv": "^16.6.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chokidar": "^2.1.7",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "pkg": "^5.8.1",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.48.0"
  },
  "pkg": {
    "scripts": "dist/index.js",
    "assets": [
      "node_modules/chokidar/**/*"
    ]
  },
  "standard-version": {
    "infile": "docs/CHANGELOG.md"
  }
}
